<%= form_for [ @user, @teacher ] do |f| %>

  <div class="field">
    <%= f.label :control_number %><br />
    <%= f.text_field :control_number %>
  </div>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :paternal_surname %><br />
    <%= f.text_field :paternal_surname %>
  </div>
  <div class="field">
    <%= f.label :maternal_surname %><br />
    <%= f.text_field :maternal_surname %>
  </div>
  <div class="field">
    <%= f.label :user_id %><br />
    <%= f.text_field :user_id %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>